<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="Enable to allow application updates"
        android:title="Application Updates" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch1"
        android:summary="Enable Video Resume Play Support"
        android:title="Auto Resume Videos" />

    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="123456789"
        android:inputType="textCapWords"
        android:key="example_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Please Enter DeviceActivation ID Provided By BTTV"
        android:title="Activate this Device" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/hdArray"
        android:entryValues="@array/hdValues"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Video Quality" />

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/langArray"
        android:entryValues="@array/langValues"
        android:key="lang_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Subtitle Language" />

</PreferenceScreen>
