<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:paddingTop="?android:attr/actionBarSize">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home2"
                android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:paddingBottom="@dimen/activity_vertical_margin"
                      android:paddingLeft="@dimen/activity_horizontal_margin"
                      android:paddingRight="@dimen/activity_horizontal_margin"
                      android:paddingTop="@dimen/activity_vertical_margin"
                      tools:context="bt.bt.bttv.MovieActivity">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/carousel_height"
                android:layout_marginBottom="7dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/family_name_tv"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="55dp"
                    android:layout_height="22dp"

                    android:layout_gravity="right"
                    android:background="@drawable/buttonradius"
                    android:onClick="TVShowGenres"

                    android:text="More"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/imageGalleryParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">


                <LinearLayout

                    android:id="@+id/imageGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"/>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageGalleryParent"
                    android:layout_marginBottom="8dp"
                    android:text="@string/comedy_name_tv"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button3"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="55dp"
                    android:layout_height="22dp"

                    android:layout_gravity="right"
                    android:background="@drawable/buttonradius"
                    android:onClick="TVShowGenres"

                    android:text="More"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/imageGalleryParent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/imageGalleryParent">


                <LinearLayout

                    android:id="@+id/imageGallery2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"/>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageGalleryParent2"
                    android:layout_marginBottom="8dp"
                    android:text="@string/drama_name_tv"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button4"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="55dp"
                    android:layout_height="22dp"

                    android:layout_gravity="right"
                    android:background="@drawable/buttonradius"
                    android:onClick="TVShowGenres"

                    android:text="More"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/imageGalleryParent3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/imageGalleryParent2">


                <LinearLayout

                    android:id="@+id/imageGallery3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"/>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageGalleryParent3"
                    android:layout_marginBottom="8dp"
                    android:text="@string/animation_name_tv"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button5"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="55dp"
                    android:layout_height="22dp"

                    android:layout_gravity="right"
                    android:background="@drawable/buttonradius"
                    android:onClick="TVShowGenres"

                    android:text="More"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/imageGalleryParent4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/imageGalleryParent3">


                <LinearLayout

                    android:id="@+id/imageGallery4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"/>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageGalleryParent4"
                    android:layout_marginBottom="8dp"
                    android:text="@string/thriller_name_tv"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/button6"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="55dp"
                    android:layout_height="22dp"

                    android:layout_gravity="right"
                    android:background="@drawable/buttonradius"
                    android:onClick="TVShowGenres"

                    android:text="More"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/imageGalleryParent5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/imageGalleryParent4">


                <LinearLayout

                    android:id="@+id/imageGallery5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"/>

            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

